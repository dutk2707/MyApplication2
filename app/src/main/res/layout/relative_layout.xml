<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="1"
        android:gravity="center"
        android:background="#00FF15"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="2"
        android:gravity="center"
        android:layout_above="@+id/tvView1"
        android:layout_toStartOf="@+id/tvView1"
        android:background="@color/colorPrimaryDark"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="3"
        android:gravity="center"
        android:layout_above="@+id/tvView1"
        android:layout_toEndOf="@+id/tvView1"
        android:background="@color/colorAccent"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="4"
        android:gravity="center"
        android:layout_below="@+id/tvView1"
        android:layout_toStartOf="@+id/tvView1"
        android:background="#E23B11"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="5"
        android:gravity="center"
        android:layout_below="@+id/tvView1"
        android:layout_toEndOf="@+id/tvView1"
        android:background="@color/colorPrimary"/>
</RelativeLayout>